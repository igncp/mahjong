{
  "name": "mahjong-web-client",
  "private": true,
  "scripts": {
    "build": "rm -rf out .next && next build",
    "dev": "rm -rf .next && next dev -p 9000",
    "e2e": "bash scripts/run_e2e_docker.sh",
    "e2e:prod": "E2E_BASE_URL=https://mahjong-rust.com playwright test",
    "e2e:run": "(if [ ! -d out ]; then npm run build; fi) && npm run start:e2e",
    "i18next": "i18next",
    "lint": "prettier --check 'src/**' 'pages/**' 'tests/**' && eslint . && bun run lint:styles",
    "lint:fix": "prettier --write 'src/**' 'pages/**' && eslint --fix .",
    "lint:styles": "stylelint 'src/**/*.css' 'src/**/*.scss' --max-warnings 0",
    "start:e2e": "http-server -p 5000 out",
    "test": "i18next && grep '\"\"' -r public/locales | wc -l | grep -q 0",
    "typecheck": "tsc --noEmit --project ."
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@next/eslint-plugin-next": "^13.2.4",
    "@playwright/test": "^1.35.1",
    "@types/qs": "^6.9.7",
    "antd": "latest",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "eslint-plugin-perfectionist": "^2.5.0",
    "formik": "^2.4.2",
    "i18next": "latest",
    "i18next-http-backend": "^2.2.0",
    "i18next-parser": "^8.0.0",
    "jsonwebtoken": "^9.0.0",
    "next": "latest",
    "qs": "^6.11.1",
    "query-string": "^8.1.0",
    "rdndmb-html5-to-touch": "^8.0.0",
    "react": "18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-multi-backend": "^8.0.0",
    "react-dnd-preview": "^8.0.0",
    "react-dom": "18.2.0",
    "react-i18next": "latest",
    "rxjs": "^7.8.0",
    "stylelint": "^15.10.2",
    "stylelint-scss": "^5.0.0",
    "web_lib": "file:pkg",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/node": "18.15.9",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-playwright": "^0.15.3",
    "eslint-plugin-react": "^7.32.2",
    "http-server": "^14.1.1",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.7",
    "sass": "^1.62.1",
    "stylelint-config-clean-order": "^5.2.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-order": "^6.0.3",
    "typescript": "5.0.2"
  }
}
