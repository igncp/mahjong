{
  "name": "mahjong-web-client",
  "private": true,
  "scripts": {
    "build": "rm -rf out .next && next build",
    "dev": "rm -rf .next && next dev -p 9000",
    "e2e": "bash scripts/run_e2e_docker.sh",
    "e2e:prod": "E2E_BASE_URL=https://mahjong-rust.com playwright test",
    "e2e:run": "(if [ ! -d out ]; then npm run build; fi) && npm run start:e2e",
    "i18next": "i18next",
    "lint": "prettier --check 'src/**' 'tests/**' && eslint . && bun run lint:styles",
    "lint:fix": "prettier --write 'src/**' 'bindings/**' && eslint --fix .",
    "lint:styles": "stylelint 'src/**/*.css' 'src/**/*.scss' --max-warnings 0",
    "start:e2e": "http-server -p 5000 out",
    "test": "i18next && grep '\"\"' -r public/locales | wc -l | grep -q 0",
    "typecheck": "tsc --noEmit --project ."
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.7",
    "@next/eslint-plugin-next": "^13.5.6",
    "@playwright/test": "^1.45.1",
    "@types/qs": "^6.9.15",
    "antd": "^5.19.1",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "eslint-plugin-perfectionist": "^2.11.0",
    "formik": "^2.4.6",
    "i18next": "^23.11.5",
    "i18next-http-backend": "^2.5.2",
    "i18next-parser": "^8.13.0",
    "jsonwebtoken": "^9.0.2",
    "next": "~14.1.4",
    "qrcode": "^1.5.3",
    "qs": "^6.12.3",
    "query-string": "^8.2.0",
    "rdndmb-html5-to-touch": "^8.0.3",
    "react": "18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-multi-backend": "^8.0.3",
    "react-dnd-preview": "^8.0.3",
    "react-dom": "18.2.0",
    "react-i18next": "^14.1.2",
    "rxjs": "^7.8.1",
    "stylelint": "^15.11.0",
    "stylelint-scss": "^5.3.2",
    "web_lib": "file:pkg",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.3.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "20.14.10",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-playwright": "^0.15.3",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "http-server": "^14.1.1",
    "postcss": "^8.4.40",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "sass": "^1.77.8",
    "stylelint-config-clean-order": "^5.4.2",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-order": "^6.0.4",
    "tailwindcss": "^3.4.7",
    "typescript": "5.5.3"
  }
}
